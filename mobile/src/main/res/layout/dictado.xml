<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtGrabarVoz2"
        android:layout_width="227dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="103dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:layout_toStartOf="@+id/txtGrabarVoz"
        android:background="@color/BackgroundList"
        android:backgroundTint="@color/BackgroundList"
        android:text="TEXTO A ENVIAR"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:theme="?android:attr/windowTitleStyle"
        tools:theme="?android:attr/windowTitleBackgroundStyle" />

    <TextView
        android:id="@+id/txtGrabarVoz"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtGrabarVoz2"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginEnd="12dp"
        android:background="@color/BackgroundList"
        android:backgroundTint="@color/BackgroundList"
        android:text="TELEFONO"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:theme="?android:attr/windowTitleStyle"
        tools:theme="?android:attr/windowTitleBackgroundStyle" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:text="ListaTelfonos" />

</RelativeLayout>